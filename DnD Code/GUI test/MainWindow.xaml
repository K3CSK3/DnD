<Window x:Class="GUI_test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="DnD">
            <Setter Property="TextElement.FontFamily" Value="Fonts/#DnD"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Label Content="20 Oldalú Dobókocka" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="22" FontWeight="Bold" FontFamily="DnD.ttf #Trick Or Treats, Times New Roman" Width="780"></Label>
        <Slider x:Name="weight" Margin="0,120,0,0" IsEnabled="False" HorizontalAlignment="Center" Width="300"></Slider>
        <CheckBox Content="Súlyozott Dobókocka" HorizontalContentAlignment="Center" Margin="0,50,0,328" FontSize="16" HorizontalAlignment="Center" FontFamily="DnD.ttf #Trick Or Treats, Times New Roman" Checked="weighedSliderEnable" Unchecked="weighedSliderDisable" Width="262"/>
    </Grid>
</Window>
